extends ../szablon_base
block content
  .container
    form( method="POST" action='/products/update/'+produkt.id)
            div.form-group
              input#category.form-control(type='text', placeholder='Enter category', name='category', value=produkt.category)
            div.form-group
              input#name.form-control(type='text', placeholder='Enter name', name='name' value=produkt.name)
            div.form-group
              input#color.form-control(type='text', placeholder='Enter color' name='color' value= produkt.color)
            div.form-group
              input#price.form-control(type='number',min="0", placeholder='Enter price' name='price' value=produkt.price)
            div.form-group
              input(type='submit', value='Update')
